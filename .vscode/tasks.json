{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Tests (interactive)",
      "type": "shell",
      "command": "./test.sh",
      "args": [
        "${input:dir}",
        "${input:problem}"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "dir",
      "type": "promptString",
      "description": "Enter problem directory under 'problems/' (e.g. abc405)",
      "default": "abc405"
    },
    {
      "id": "problem",
      "type": "promptString",
      "description": "Enter problem file name (e.g. a)",
      "default": "a"
    }
  ]
}